<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.ui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RecyclerLinearActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activity.ActivityGridRecycler"></activity>
        <activity android:name=".activity.ActivityDragDropRecycler"></activity>
        <activity android:name=".activity.ActivityExpandableRecycler"></activity>
        <activity android:name=".activity.ActivityToolBarWithTab"
            android:theme="@style/AppThemeNoActionBar">
        </activity>
    </application>

</manifest>